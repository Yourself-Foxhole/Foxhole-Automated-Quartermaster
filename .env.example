# .env.example
# Example environment file for Discord bot retry mechanism
# Copy this file to .env and set your own values as needed

# Discord bot token (required)
DISCORD_BOT_TOKEN=your_token_here

# Optional retry mechanism settings
# Number of times to retry connecting after a failure (default: 3)
DISCORD_BOT_MAX_RETRIES=3
# Delay in seconds between retries (default: 15)
DISCORD_BOT_RETRY_DELAY=15

# Channel ID for integration tests (required for integration testing)
DISCORD_TEST_CHANNEL_ID=your_channel_id_here

# Emoji to use for integration test reactions (optional, default: üëç)
DISCORD_TEST_EMOJI=üëç
